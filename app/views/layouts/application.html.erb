<!DOCTYPE html>
<html>
  <head>
    <title>Finance Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-dark bg-dark">
      <div class="col-md-7 mx-auto navbar">
        <%= link_to "Home", transactions_path, class: "text-white text-decoration-none" %>
        <% if user_signed_in? %>
          <%= link_to "New Transaction", new_transaction_path, class: "text-white text-decoration-none" %>
          <%= link_to "Import Transactions", transaction_import_form_path, class: "text-white text-decoration-none" %> 
          <%= link_to "Export Transactions", transaction_export_path, class: "text-white text-decoration-none" %>
          <%= link_to "Profile", edit_user_registration_path, class: "text-white text-decoration-none" %>
          <div class="ml-auto">
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-light" %>
          </div>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path,  class: "text-white text-decoration-none" %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-light" %>
        <% end %>
      </div>
    </nav>

    <div class="container">
      <% if notice %>
        <div class="col-md-6 mx-auto mt-4">
          <div class="alert alert-warning">
            <p><%= notice %></p>
        </div>
      <% end %>

      <% if alert %>
        <div class="col-md-6 mx-auto mt-4">
          <div class="alert alert-danger">
            <p><%= alert %></p>
          </div>
        </div>
      <% end %>
    </div>

    <%= yield %>
    <div class="mt-5"></div>
  </body>
</html>
