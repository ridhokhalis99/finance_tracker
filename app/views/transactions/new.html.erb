<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= render 'flash_messages' %>
      <div class="card">
        <div class="card-header">
          New Transaction
        </div>
        <div class="card-body">
          <%= form_with(model: @transaction, local: true) do |form| %>
            <%= render 'form_fields', form: form %>
            <%= form.submit 'Create Transaction', class: 'btn btn-dark' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>